@inherits LayoutComponentBase

<div class="main-layout flex-center">
    <div class="background-globes">
        <div class="globe globe-1"></div>
        <div class="globe globe-2"></div>
        <div class="globe globe-3"></div>
    </div>

    <main class="content-container">
        @Body
    </main>
</div>

<style>
    .main-layout {
        min-height: 100vh;
        width: 100vw;
        position: relative;
        overflow: hidden;
        flex-direction: column;
    }
    
    .content-container {
        z-index: 10;
        width: 100%;
        max-width: 1200px;
        padding: 2rem;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .background-globes {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 0;
        overflow: hidden;
    }

    .globe {
        position: absolute;
        border-radius: 50%;
        filter: blur(80px);
        opacity: 0.6;
    }

    .globe-1 {
        width: 60vw;
        height: 60vw;
        background: #4f46e5; /* Indigo */
        top: -10%;
        left: -10%;
        animation: float 20s infinite ease-in-out;
    }

    .globe-2 {
        width: 50vw;
        height: 50vw;
        background: #ec4899; /* Pink */
        bottom: -10%;
        right: -10%;
        animation: float 25s infinite ease-in-out reverse;
    }
    
    .globe-3 {
        width: 30vw;
        height: 30vw;
        background: #06b6d4; /* Cyan */
        bottom: 20%;
        left: 30%;
        opacity: 0.4;
        animation: float 15s infinite linear;
    }

    @@keyframes float {
        0% { transform:  translate(0, 0) rotate(0deg); }
        50% { transform: translate(30px, 30px) rotate(5deg); }
        100% { transform: translate(0, 0) rotate(0deg); }
    }
</style>
